{
  "system_metadata": {
    "title": "Orchestrator v2",
    "version": "2.0",
    "stage": "roadmap-current"
  },
  "tasks": {
    "enabled": ["echo", "upper", "json_pretty"]
  },
  "access": {
    "allowed_user_ids": []
  },
  "rate_limits": {
    "llm": {
      "per_minute": 10,
      "per_day": 200
    }
  },
  "llm": {
    "provider": "perplexity",
    "model": "sonar",
    "system_prompt": "Ты полезный ассистент. Отвечай кратко и по делу.",
    "history_turns": 5
  },
  "facts_only_default": false,
  "timeouts": {
    "tool_call_seconds": 15,
    "web_tool_call_seconds": 20,
    "llm_seconds": 20,
    "external_api_seconds": 10
  },
  "retry": {
    "max_attempts": 3,
    "base_delay_ms": 250,
    "max_delay_ms": 2000,
    "jitter_ms": 200
  },
  "circuit_breaker": {
    "failure_threshold": 5,
    "window_seconds": 60,
    "cooldown_seconds": 60
  }
}
