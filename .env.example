# Telegram bot token
BOT_TOKEN=

# Optional: path to orchestrator config
ORCHESTRATOR_CONFIG_PATH=config/orchestrator.json

# Optional: SQLite database path
BOT_DB_PATH=data/bot.db

# Optional: Perplexity API key (enables LLM)
PERPLEXITY_API_KEY=

# Optional: Perplexity API base URL
PERPLEXITY_BASE_URL=https://api.perplexity.ai

# Optional: Perplexity model
PERPLEXITY_MODEL=sonar

# Optional: Perplexity timeout in seconds
PERPLEXITY_TIMEOUT_SECONDS=15

# Optional: comma-separated Telegram user IDs (empty means allow all)
ALLOWED_USER_IDS=123456789

# Optional: LLM rate limits
LLM_PER_MINUTE=10
LLM_PER_DAY=200

# Optional: LLM history turns to include in context
LLM_HISTORY_TURNS=5
